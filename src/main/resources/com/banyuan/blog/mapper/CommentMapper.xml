<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 命名空间namespace:指定接口全类名 -->
<mapper namespace="com.banyuan.blog.mapper.CommentMapper">
    <select id="selectCommentByBlogId" resultType="com.banyuan.blog.model.Comment">
        SELECT id,
               user_id,
               blog_id,
               content,
               time
        FROM comment
        WHERE blog_id = #{blogId}
    </select>

    <select id="selectCommentByUserId" resultType="com.banyuan.blog.model.Comment">
        SELECT id,
               user_id,
               blog_id,
               content,
               time
        FROM comment
        WHERE user_id = #{userId}
    </select>
</mapper>
